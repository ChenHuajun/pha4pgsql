#!/bin/bash

###########################################################
#cls_maintenance
#InPut:none
#OutPut:none
#
#0  正常
#1  一般错误
#101 无法获取crm信息，比如pacemaker,corosync服务未启动(保留)
#102 分区未达到法定票数或和任意一个另外的HA节点状态不一致(保留)
###########################################################

cd $(dirname "$0")
. ../lib/common.sh

# switch to maintenance mode
pcs property set maintenance-mode=true